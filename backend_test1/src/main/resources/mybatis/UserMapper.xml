<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.test.dao.UserDao">
    <select id="listUser" resultType="com.example.test.pojo.User">
        select *
        from test.user;
    </select>

    <select id="listUserByName" parameterType="com.example.test.pojo.query.UserQuery" resultType="com.example.test.pojo.User">
        select *
        from test.user
        <where>
            <if test="name != null and name != ''">
                name like concat('%',#{name},'%')
            </if>
        </where>
    </select>

    <delete id="deleteUserById" parameterType="int">
        delete from test.user where id=#{id}
    </delete>
    <select id="queryUserById" parameterType="int" resultType="com.example.test.pojo.User">
        select * from test.user where id=#{id}
    </select>

    <update id="updateUser" parameterType="com.example.test.pojo.User">
        update  test.user
        set name = #{name},pwd = #{pwd}
        where id = #{id}
    </update>
    <insert id="addUser" parameterType="com.example.test.pojo.User">
        insert into test.user(name, pwd) values (#{name},#{pwd})
    </insert>
</mapper>